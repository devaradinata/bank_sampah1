<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E7D2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/nav_bg"
            android:orientation="horizontal">

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/menu_logo" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="DATA SUB KATEGORI"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/img"
                android:src="@drawable/img_1" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginVertical="25dp"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_text"
                    android:layout_gravity="center"
                    android:padding="10dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari Data Sub-Kategori..."
                        android:gravity="center"
                        android:layout_marginHorizontal="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/data_sampah_bg"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_text"
                        android:padding="10dp"
                        android:layout_marginVertical="10dp"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plastik RGID/Berbentuk"
                            android:textColor="#000"
                            android:layout_marginRight="130dp" />

                        <ImageButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/arroq_dropdown_24"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Sub-Kategori"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/input_text"
                        android:padding="10dp"
                        android:text="Putihan (HDPE & Jenis Lainnya)"
                        android:textColor="#000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Satuan"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginRight="100dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/input_text"
                            android:gravity="right"
                            android:padding="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="70dp"
                                android:text="Kg"
                                android:textColor="#000"/>

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/arroq_dropdown_24" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:text="1200"
                            android:textColor="#000"
                            android:background="@drawable/input_text"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/input_text"
                        android:padding="10dp"
                        android:text="Keterangan..."
                        android:textColor="#000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="EDIT"
                            android:background="@drawable/edit"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"/>

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="HAPUS"
                            android:background="@drawable/delete"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/data_sampah_bg"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_text"
                        android:padding="10dp"
                        android:layout_marginVertical="10dp"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plastik RGID/Berbentuk"
                            android:textColor="#000"
                            android:layout_marginRight="130dp" />

                        <ImageButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/arroq_dropdown_24"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Sub-Kategori"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/input_text"
                        android:padding="10dp"
                        android:text="Putihan (HDPE & Jenis Lainnya)"
                        android:textColor="#000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Satuan"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginRight="100dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/input_text"
                            android:gravity="right"
                            android:padding="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="70dp"
                                android:text="Kg"
                                android:textColor="#000"/>

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/arroq_dropdown_24" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:text="1200"
                            android:textColor="#000"
                            android:background="@drawable/input_text"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/input_text"
                        android:padding="10dp"
                        android:text="Keterangan..."
                        android:textColor="#000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="EDIT"
                            android:background="@drawable/edit"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"/>

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="HAPUS"
                            android:background="@drawable/delete"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingHorizontal="20dp">
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plus_min_bg"
                        android:text="@string/plus"
                        android:textSize="34sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingBottom="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>